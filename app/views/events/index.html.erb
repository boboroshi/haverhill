

<%= link_to(image_tag('logo_sm_haverhill.png', :id => 'logo_inside'), root_url) %>
<%= image_tag('feat_event.jpg', :id => 'feature_inside') %>


<div id="insidebody" class="clearfix">
  <div class="harvardrule">&nbsp;</div>
  <div id="rightcol">
  </div>
  <div id="leftcol">
	<% @events.each do |event| %>
		<% div_for event, :class => 'event' do %>
		  <div class='name'><%= event.happens_on %> <%= link_to event.name, event %></div>
		  <div class='description'><%= event.description %></div>
		  <div class='location'><%= h event.location %></div>
		<% end %>
	<% end %>  

	</div>
</div><!-- // insidebody -->
